# MongoDB Configuration
MONGODB_HOST=localhost:27017
MONGODB_URL=mongodb://admin:password@localhost:27017/prompt_share?authSource=admin
MONGODB_USER=admin
MONGODB_PASSWORD=password
MONGODB_DATABASE=prompt_share

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=prompt_share

# Claude Data Path (for Docker volume mounting)
# This should point to your local Claude data directory
CLAUDE_DATA_PATH=~/.claude

# Optional: API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Optional: Frontend Configuration
FRONTEND_PORT=3000

# Development/Production Mode
NODE_ENV=production